
   <% book.book_comments.each do |book_comment| %>
   <tr>
     <div>
    <td>
   <%= attachment_image_tag book_comment.user, :profile_image, size: "50x50", fallback: "no_image.jpg" %>
   <%= book_comment.user.name %>
    </td>
   <td><%= book_comment.comment %></td>
   <% if book_comment.user == current_user %>
   <td><%= link_to "destroy", book_book_comment_path(book_comment.book, book_comment.id), method: :delete, remote: true, class:"btn btn-danger" %></td>
   <% end %>
   </tr>
   </div>
   <% end %>