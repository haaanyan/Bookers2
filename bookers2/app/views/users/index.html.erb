<main>
<div class="container">
  <div class="row">
    <div class="col-md-3">
   <p><%= render 'users/user',user: @user %></p>
   <p><%= render 'books/book', book: @newbook %></p>
    </div>

 <div class="col-md-9">
 <h2>Users</h2>
 <table class="table">
   <thead>
     <th>image</th>
     <th>name</th>
     <th></th>
   </thead>
   <tbody>
     <% @users.each do |user| %>
  <tr>
    <td><%= attachment_image_tag user, :profile_image, size: "50x50", fallback: "no_image.jpg" %></td>
    <td><%= user.name %></td>
    <td><%= link_to "Show", "/users/#{user.id}" %></td>
   </tr>
   <% end %>
   </tbody>
  </table>
 </div>
</main>