 <div class="container">
   <div class="row">
  <h2>User info</h2>


  <table class="table">
  <tbody>
    <tr></tr>
    <th>
    <%= attachment_image_tag user, :profile_image, size: "100x100", fallback: "no_image.jpg"%>
    </th>
    <tr>
      <th>Name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>Introduction</th>
      <th><%= user.introduction %></th>
    </tr>
    </tbody>
  </table>
 </div>

    <div class="row">
      <div class="col-10 mx-auto">
      <% if user == current_user %>
        <%= link_to edit_user_path(current_user), class:"btn btn-outline-secondary btn-block" do %>
        <i class="fas fa-user-edit"></i>
        <% end %>
        <% end %>
     </div>
    </div>

  </div>



